{
    "name": "server",
    "version": "1.0.0",
    "type": "module",
    "main": "server.js",
    "scripts": {
"dev": "NODE_ENV=development nodemon server.js",
    "start": "NODE_ENV=production node server.js",
        "migrate": "node ./migrations/create-tables.js",
        "reset-db": "node ./migrations/reset-db.js",
        "fresh-db": "npm run reset-db && npm run migrate",
        "restore-prod-env": "git checkout -- .env"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^2.7.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.6",
        "pg": "^8.11.3",
        "uuid": "^11.1.0",
        "zod": "^4.0.10"
    },
    "devDependencies": {
        "morgan": "^1.10.0",
        "nodemon": "^3.1.10"
    }
}
